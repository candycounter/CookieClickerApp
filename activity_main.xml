<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_list"
    android:id="@+id/id_layout"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/id_kobeScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kobe "
        android:textColor="#552583"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/id_perSecond"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.467"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/id_perSecond"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="92dp"
        android:layout_marginBottom="61dp"
        android:text="Per Second: "
        android:textColor="#552583"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/id_radioGroup"
        app:layout_constraintEnd_toEndOf="@+id/id_kobeScore"
        app:layout_constraintHorizontal_bias="0.384"
        app:layout_constraintStart_toStartOf="@+id/id_kobeScore"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/id_kobeeight"
        android:layout_width="70dp"
        android:layout_height="112dp"
        app:layout_constraintBottom_toBottomOf="@+id/id_perSecond"
        app:layout_constraintEnd_toStartOf="@+id/id_perSecond"
        app:layout_constraintHorizontal_bias="0.16"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:srcCompat="@tools:sample/avatars[0]" />

    <ImageView
        android:id="@+id/id_kobetwentyfour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/id_perSecond"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.88"
        app:layout_constraintStart_toEndOf="@+id/id_kobeScore"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:srcCompat="@tools:sample/avatars[0]" />

    <ImageView
        android:id="@+id/id_kobeImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginBottom="236dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.421"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:srcCompat="@tools:sample/avatars[1]" />

    <ImageView
        android:id="@+id/id_kobelogo"
        android:layout_width="130dp"
        android:layout_height="139dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.396"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_kobeImage"
        app:layout_constraintVertical_bias="0.515"
        tools:srcCompat="@tools:sample/avatars[0]" />

    <TextView
        android:id="@+id/id_upgradeDescrip"
        android:layout_width="100dp"
        android:layout_height="145dp"
        android:text="TextView"
        android:textColor="#FDB927"
        app:layout_constraintBottom_toBottomOf="@+id/id_kobelogo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/id_kobelogo"
        app:layout_constraintTop_toBottomOf="@+id/id_kobeImage" />

    <RadioGroup
        android:id="@+id/id_radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="231dp"
        app:layout_constraintBottom_toBottomOf="@+id/id_kobeImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.94"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.63">

        <RadioButton
            android:id="@+id/id_buy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Buy"
            android:textColor="#00BCD4"
            android:textColorLink="#FFFFFF"
            android:textCursorDrawable="@drawable/cookie"
            android:textSize="30sp" />

        <RadioButton
            android:id="@+id/id_sell"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sell"
            android:textColor="#FD2755"
            android:textColorHint="#00BCD4"
            android:textSize="30sp" />
    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>